{
  "manifest_version": 3,
  "name": "Razorshell",
  "version": "0.0.1",
  "description": "This is a browser extension that adds bash shell-like keyboard shortcuts to textboxes. Enhances text boxes with custom keyboard shortcuts.",
  "permissions": [
    "activeTab",
    "scripting",
    "commands",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "16": "/assets/16.png",
      "32": "/assets/32.png",
      "48": "/assets/48.png",
      "128": "/assets/128.png"
    },
    "default_title": "Razorshell"
  },
  "background": {
    "service_worker": "service.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+W",
        "mac": "Command+W"
      },
      "description": "Delete word left of the cursor in a text box"
    }
  },
  "host_permissions": [
    "*://*/*"
  ]
}
